<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyMomRecipe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DailyMomRecipe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DailyMomRecipe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DailyMomRecipe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomFont.Regular">
        <item name="android:fontFamily">@font/poppinregular</item>
    </style>

    <style name="CustomFont.Bold">
        <item name="android:fontFamily">@font/poppinbold</item>
    </style>

    <style name="CustomFont.Label" parent="CustomFont.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="CustomFont.Label.Bold" parent="CustomFont.Bold">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="CustomFont.heading" parent="CustomFont.Regular">
        <item name="android:textSize">56sp</item>
        <item name="android:lineSpacingExtra">11sp</item>
    </style>

    <style name="CustomFont.heading.Bold" parent="CustomFont.Bold">
        <item name="android:textSize">56sp</item>
        <item name="android:lineSpacingExtra">11sp</item>
    </style>

    <style name="CustomFont.h1" parent="CustomFont.Regular">
        <item name="android:textSize">48sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="CustomFont.h1.Bold" parent="CustomFont.Bold">
        <item name="android:textSize">48sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="CustomFont.h2" parent="CustomFont.Regular">
        <item name="android:textSize">48sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="CustomFont.h2.Bold" parent="CustomFont.Bold">
        <item name="android:textSize">48sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="CustomFont.h3" parent="CustomFont.Regular">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="CustomFont.h3.Bold" parent="CustomFont.Bold">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="CustomFont.h4" parent="CustomFont.Regular">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="CustomFont.h4.Bold" parent="CustomFont.Bold">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="CustomFont.h5" parent="CustomFont.Regular">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="CustomFont.h5.Bold" parent="CustomFont.Bold">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="CustomFont.Paragraph" parent="CustomFont.Regular">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="CustomFont.Paragraph.Bold" parent="CustomFont.Bold">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="CustomFont.Small" parent="android:TextAppearance.Small">
        <item name="android:fontFamily">@font/Poppins-Regular</item>
    </style>

    <style name="CustomFont.Small.Bold" parent="android:TextAppearance.Small">
        <item name="android:fontFamily">@font/poppinbold</item>
    </style>

    <style name="CustomFont.Tiny" parent="CustomFont.Regular">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="CustomFont.Tiny.Bold" parent="CustomFont.Bold">
        <item name="android:textSize">10sp</item>
    </style>


</resources>